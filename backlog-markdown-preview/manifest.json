{
  "manifest_version": 3,
  "name": "Backlog Markdown Preview",
  "version": "1.0",
  "description": "Preview Markdown from Backlog in a sidebar.",
  "permissions": [
    "activeTab",
    "sidePanel",
    "scripting"
  ],
  "action": {
    "default_title": "Backlog Markdown Preview を開く"
  },
  "side_panel": {
    "default_path": "sidebar.html"
  },
  "background": {
    "service_worker": "js/background.js"
  },
  "host_permissions": ["<all_urls>"],
  "web_accessible_resources": [
    {
      "resources": ["sidebar.html", "js/sidebar.js", "js/marked.umd.js", "js/sidebar.css"],
      "matches": ["<all_urls>"]
    }
  ]
}